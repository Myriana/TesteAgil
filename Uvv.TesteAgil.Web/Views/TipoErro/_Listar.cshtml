
@model IEnumerable<Uvv.TesteAgil.Entidades.Modelos.TipoErro>

<table class="table table-striped" id="gridTipoErro">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gravidade)
        </th>
        <th width="15%">Ações</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gravidade)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TipoErroId }) |
                @Html.ActionLink("Details", "Details", new { id = item.TipoErroId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TipoErroId })
            </td>
            <td>
                <a class="btn btn-warning" href="@Url.Action("Edit", new { id = item.TipoErroId })">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                </a>
                <a class="btn btn-success" href="@Url.Action("Details", new { id = item.TipoErroId })">
                    <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                </a>
                <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.TipoErroId })">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>

